<Window x:Class="Web_Camera_App.CameraSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Camera" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="cameraListBox" Grid.Row="0" DisplayMemberPath="Name" />
        <Button x:Name="selectButton" Grid.Row="1" Content="Select" Click="SelectButton_Click" />
    </Grid>
</Window>